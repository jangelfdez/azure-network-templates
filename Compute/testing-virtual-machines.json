{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentPrefix": {
            "type": "string",
            "metadata": {
                "description": "Prefix to include in every resource created to allow multiple deployments into the same scope"
            },
            "defaultValue": "pl-nsg",
            "maxLength": 10
        },
        "subnet": {
            "type": "object",
            "metadata": {
                "description": "A subnet object"
            }
        },
        "vmConfiguration": {
            "type": "object",
            "metadata": {
                "description": "A VM configuration"
            }
        },
        "time": {
            "type": "string",
            "defaultValue": "[utcNow('ss')]",
            "metadata": {
                "description": "Ticks to rerun the VM extension"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-nsg')]",
            "location": "[parameters('subnet').location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "Allow-Internet-to-22",
                        "properties": {
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-pip')]",
            "location": "[parameters('subnet').location]",
            "sku": {
                "name": "Standard",
                "tier": "Regional"
            },
            "properties": {
                "publicIPAllocationMethod": "Static"
            }
        },

        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-nic')]",
            "location": "[parameters('subnet').location]",
            "dependsOn": [
                "[concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-pip')]"
            ],
            "properties": {
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-nsg'))]"
                },
                "enableIPForwarding": true,
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-pip'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-vnet'), parameters('subnet').subnets[0].name)]"
                            },
                            "primary": true,
                            "privateIPAddressVersion": "IPv4"                            
                        }
                    }
                ]
            }
        },


        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2020-12-01",
            "name": "[concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-vm')]",
            "location": "[parameters('subnet').location]",
            "dependsOn": [
                "[concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-nic')]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_A1_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "canonical",
                        "offer": "0001-com-ubuntu-server-focal",
                        "sku": "20_04-lts",
                        "version": "latest"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-vm', '-os-disk')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-vm')]",
                    "adminUsername": "[parameters('vmConfiguration').adminUsername]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "[concat('/home/',parameters('vmConfiguration').adminUsername,'/.ssh/authorized_keys')]",
                                    "keyData": "[parameters('vmConfiguration').publicKey]"
                                }
                            ]
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-nic'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                },
                "priority": "Spot",
                "evictionPolicy": "Deallocate",
                "billingProfile": {
                    "maxPrice": -1
                }
            }
        },

        {
            "name": "[concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-vm/customScriptExtension')]",
            "location": "[parameters('subnet').location]",
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-03-01",
            "dependsOn": [
                "[concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-vm')]"
            ],
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.1",
                "autoUpgradeMinorVersion": true,
                "protectedSettings": {
                    "commandToExecute": "[parameters('vmConfiguration').commandToExecute]"

                },
                "settings": {
                    "timestamp": "[int(parameters('time'))]"
                }
            }
        }
    ],
    "outputs": {
        "vmIp": {
            "type": "string",
            "value": "[reference(concat(parameters('deploymentPrefix'),'-', parameters('subnet').name, '-nic'), '2020-11-01').ipConfigurations[0].properties.privateIPAddress]"
        }
    }
}